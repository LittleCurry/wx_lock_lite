
<!--mine.wxml-->
<view class="content">
  <view style="width: 100%;height: 120px;">
    <view class="content-user">
      <view class="flex-item">
        <image style="border-radius:50%;width: 120rpx; height:120rpx; background-color: #eeeeee;border:2px solid #2e8e28;margin-left:50rpx;" mode="scaleToFill" src="{{avatarUrl}}"></image>
      </view>
      <view class="flex-item user-info"> 
        <view class="user-name">
          <label>{{nickName}}</label>
        </view>
        <view class="money">
          <label>余额:</label>
          <text> {{balance}} </text>
          <label>元</label>
        </view>
      </view>
     </view>
  </view>
  <view class="divide" />
  <view class="item-btn">
    <navigator url="/pages/precord/precord">
     <image class="nav-icon" src="/image/precord.png" mode="aspectFit"></image>
    停车记录
      <image class="arrowright" src="/image/arrowright.png" mode="aspectFit"></image>
     </navigator>
   
  </view>
  <view class="item-line" />
  <view class="item-btn">
    <navigator url="/pages/crecord/crecord">
      <image class="nav-icon" src="/image/crecord.png" mode="aspectFit"></image>
    充值记录
      <image class="arrowright" src="/image/arrowright.png" mode="aspectFit"></image>
    </navigator>
  </view>
  <view class="item-line" />
  <view class="item-btn">
    <navigator url="/pages/charge/charge" open-type="navigate">
      <image class="nav-icon" src="/image/charge.png" mode="aspectFit"></image>
    充值
      <image class="arrowright" src="/image/arrowright.png" mode="aspectFit"></image>
    </navigator>
  </view>
  <view class="item-line" />
</view>