  height: 108rpx;
  margin: 0 0 0 20rpx;
  position: relative;
  overflow: hidden;
}

.scan-bg {
  width: 86rpx;
  height: 86rpx;
  display: inline-block;
  position: absolute;
  top: 12rpx;
  left: 12rpx;
}

.scan-line {
  width: 86rpx;
  height: 86rpx;
  display: inline-block;
