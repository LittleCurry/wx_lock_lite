  flex-direction: column;
  align-items: center;
  min-height: 100%;
}

.activity-0 {
  max-height: 100%;
  overflow: hidden;
  background-color: #3caa35;
}

.input-nub {
  display: flex;
  flex-direction: row;
  width: 500rpx;
}

.scan-btn {
