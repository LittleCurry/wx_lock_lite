  height: 134rpx;
  position: absolute;
  top: 154rpx;
  left: 224rpx;
}

.locker-top {
  width: 123rpx;
  height: 278rpx;
  position: absolute;
  top: 16rpx;
  left: 260rpx;
  transform: rotate(10deg);
  -webkit-transform-origin: 72rpx 262rpx;
  transform-origin: 72rpx 262rpx;
  -webkit-animation: up 2s linear 0s ;
  animation: up 2s linear 0s ;
}

.car-state {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.change-view {
  color: #aaa;
  font-size: 14px;
  margin-top: 30px;
}

.balance {
  display: flex;
  flex-direction: row;
  padding-right: 60rpx;
  margin-top: 10px;
  justify-content: flex-end;
  align-items: center;
}

.success-icon {
  margin: 100rpx auto 15rpx;
}

.back-btn, .leave-btn, .park-btn, .change-btn {
  width: 90%;
  margin-top: 15px;
}
.loading-up:after{
  content: "";
  border:10rpx solid #ffffff; 
}
.loading-up{
  margin: 100rpx auto 40rpx
}
/*二维码动画*/

@keyframes scan {
  0% {
    top: 14rpx;
  }

  18% {
    top: -20rpx;
  }

  50% {
    top: 14rpx;
  }

  68% {
    top: 44rpx;
  }

  100% {
    top: 14rpx;
  }
}

@keyframes roll {
  0% {
    transform: rotate(0deg);
  }

  25% {
    transform: rotate(-90deg);
  }

  50% {
    transform: rotate(-180deg);
  }

  75% {
    transform: rotate(-270deg);
  }

  100% {
    transform: rotate(-360deg);
  }
}

@keyframes shake {
  0% {
    left: 242rpx;
    top: 151rpx;
  }

  12% {
    left: 243rpx;
    top: 149rpx;
  }

  25% {
    left: 241rpx;
    top: 150rpx;
  }

  37% {
    left: 243rpx;
    top: 151rpx;
  }

  50% {
    left: 242rpx;
    top: 149rpx;
  }

  62% {
    left: 240rpx;
    top: 150rpx;
  }

  75% {
    left: 243rpx;
    top: 151rpx;
  }

  87% {
    left: 241rpx;
    top: 149rpx;
  }

  100% {
    left: 242rpx;
    top: 150rpx;
  }
}
@keyframes up{
  0%{ transform: rotate(-80deg);}
  50%{ transform: rotate(-45deg);}
  100%{ transform: rotate(10deg);}
}
@keyframes biger{
   0%{ transform: scale(1);}
  50%{ transform:  scale(1.2);}
  100%{ transform:  scale(1);}
}